<Window x:Class="KalkulatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KalkulatorWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Name="tbFirst"  Text="0" FontSize="20" Grid.Row ="0"
                   HorizontalAlignment="Right">
            </TextBlock>
            <TextBlock Name ="tbAritm" FontSize="20" Grid.Row ="1"
                   HorizontalAlignment="Right"></TextBlock>
            <TextBlock Name ="tbSecond" FontSize="20" Grid.Row ="2"
                   HorizontalAlignment="Right" ></TextBlock>
        </Grid>
        <Button x:Name="n7" Grid.Column="0" Grid.Row="1" Click="Button_Click">7</Button>
        <Button x:Name="n4" Grid.Column="0" Grid.Row="2" Click="Button_Click">4</Button>
        <Button x:Name="n1" Grid.Column="0" Grid.Row="3" Click="Button_Click">1</Button>
        <Button x:Name="n0" Grid.Column="0" Grid.Row="4" Click="Button_Click">0</Button>

        <Button x:Name="n8" Grid.Column="1" Grid.Row="1" Click="Button_Click">8</Button>
        <Button x:Name="n5" Grid.Column="1" Grid.Row="2" Click="Button_Click">5</Button>
        <Button x:Name="n2" Grid.Column="1" Grid.Row="3" Click="Button_Click">2</Button>
        <Button Grid.Column="1" Grid.Row="4" Click="Arithmatic_Click">/</Button>

        <Button x:Name="n9" Grid.Column="2" Grid.Row="1" Click="Button_Click">9</Button>
        <Button x:Name="n6" Grid.Column="2" Grid.Row="2" Click="Button_Click">6</Button>
        <Button x:Name="n3" Grid.Column="2" Grid.Row="3" Click="Button_Click">3</Button>
        <Button Grid.Column="2" Grid.Row="4" Click="Arithmatic_Click">X</Button>
        
        <Button Grid.Column="3" Grid.Row="1">С</Button>
        <Button Grid.Column="3" Grid.Row="2" Click="Arithmatic_Click">-</Button>
        <Button Grid.Column="3" Grid.Row="3" Click="Arithmatic_Click">+</Button>
        <Button Grid.Column="3" Grid.Row="4" Click="Equal">=</Button>
        
        
        

    </Grid>
</Window>
